@namespace Vault.Core
@model IEnumerable<Password>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@


<table class="table">
    @foreach (var password in Model)
    {
        <tr>
            <td>@password.Name</td>
            <td>@password.Passphrase</td>
            <td>
                <a class="btn btn-lg"
                   asp-page=".\Detail" asp-route-passwordId="@password.Id">
                    <i class="glyphicon glyphicon-zoom-in"></i>
                </a>
            </td>
            <td>
                <a class="btn btn-lg"
                   asp-page=".\Edit" asp-route-passwordId="@password.Id">
                    <i class="glyphicon glyphicon-edit"></i>
                </a>
            </td>
            <td>
                <a class="btn btn-lg"
                   asp-page=".\Delete" asp-route-passwordId="@password.Id">
                    <i class="glyphicon glyphicon-trash"></i>
                </a>
            </td>
        </tr>
    }
</table>